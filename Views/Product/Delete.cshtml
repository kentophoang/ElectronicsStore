@model ElectronicsStore.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h1>Xóa sản phẩm</h1>

<h3>Bạn có chắc chắn muốn xóa sản phẩm này?</h3>
<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ShortDescription) @* Đã sửa từ Description *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ShortDescription) @* Đã sửa từ Description *@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FullDescription) @* Đã thêm FullDescription *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FullDescription) @* Đã thêm FullDescription *@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OriginalPrice) @* Thêm trường OriginalPrice *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OriginalPrice)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StockQuantity) @* Thêm trường StockQuantity *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StockQuantity)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Category)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Category.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MainImageUrl) @* Đã sửa từ ImageUrl *@
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.MainImageUrl" alt="@Model.Name" style="width:150px; height:auto;" /> @* Đã sửa từ ImageUrl *@
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Slug) @* Thêm trường Slug *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Slug)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsActive) @* Thêm trường IsActive *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsFeatured) @* Thêm trường IsFeatured *@
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsFeatured)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @* Thêm method="post" cho form *@
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="ProductManagement" asp-controller="Admin" asp-area="Admin">Quay lại danh sách sản phẩm</a> @* Chỉnh sửa link để quay lại trang quản lý sản phẩm trong Admin Area *@
    </form>
</div>