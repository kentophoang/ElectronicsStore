@* Thay đổi model ở đây để nhận ViewModel duy nhất *@
@model ElectronicsStore.ViewModels.ProductListViewModel

@{
    ViewData["Title"] = "Danh sách sản phẩm";
    // Không cần khai báo các biến var ở đây nữa, vì ta có thể truy cập trực tiếp từ @Model
}

<div class="row">
    <div class="col-md-3">
        <div class="card mb-4 category-menu">
            <div class="card-header bg-primary text-white">
                <h5><i class="fas fa-list"></i> Danh mục sản phẩm</h5>
            </div>
            <ul class="list-group list-group-flush">
                @* Sử dụng trực tiếp thuộc tính từ Model *@
                <li class="list-group-item @(Model.CurrentCategoryId == null ? "active" : "")">
                    <a asp-action="Index" asp-route-searchString="@Model.SearchString" class="text-decoration-none">Tất cả sản phẩm</a>
                </li>
                @foreach (var category in Model.Categories)
                {
                    <li class="list-group-item @(Model.CurrentCategoryId == category.Id ? "active" : "")">
                        <a asp-action="Index" asp-route-categoryId="@category.Id" asp-route-searchString="@Model.SearchString" class="text-decoration-none">
                            @category.Name
                        </a>
                    </li>
                }
            </ul>
        </div>
    </div>

    <div class="col-md-9">
        @* Thay thế ViewBag bằng thuộc tính của Model *@
        @if (!string.IsNullOrEmpty(Model.SearchString))
        {
            <h3 class="mb-4">Kết quả tìm kiếm cho: "@Model.SearchString"</h3>
        }
        else if (!string.IsNullOrEmpty(Model.CurrentCategoryName))
        {
            <h3 class="mb-4">Sản phẩm theo danh mục: "@Model.CurrentCategoryName"</h3>
        }
        else
        {
            <h3 class="mb-4">Tất cả sản phẩm</h3>
        }

        @if (!Model.Products.Any())
        {
            <div class="alert alert-warning" role="alert">
                Không tìm thấy sản phẩm nào.
            </div>
        }
        else
        {
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                @foreach (var product in Model.Products)
                {
                    <div class="col">
                        @* Tái sử dụng Partial View để code gọn gàng hơn *@
                        <partial name="_ProductCard" model="product" />
                    </div>
                }
            </div>

            <nav aria-label="Page navigation" class="mt-4">
                <ul class="pagination justify-content-center">
                    <li class="page-item @(Model.PageNumber <= 1 ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-categoryId="@Model.CurrentCategoryId"
                           asp-route-searchString="@Model.SearchString"
                           asp-route-pageNumber="@(Model.PageNumber - 1)">Trước</a>
                    </li>
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="page-link" asp-action="Index"
                               asp-route-categoryId="@Model.CurrentCategoryId"
                               asp-route-searchString="@Model.SearchString"
                               asp-route-pageNumber="@i">@i</a>
                        </li>
                    }
                    <li class="page-item @(Model.PageNumber >= Model.TotalPages ? "disabled" : "")">
                        <a class="page-link" asp-action="Index"
                           asp-route-categoryId="@Model.CurrentCategoryId"
                           asp-route-searchString="@Model.SearchString"
                           asp-route-pageNumber="@(Model.PageNumber + 1)">Sau</a>
                    </li>
                </ul>
            </nav>
        }
    </div>
</div>