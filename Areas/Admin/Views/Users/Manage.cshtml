@using ElectronicsStore.Models
@{
    ViewData["Title"] = "Quản lý hệ thống";
}

<h1 class="mb-4">@ViewData["Title"]</h1>

<div class="card shadow-sm">
    <div class="card-body">
        <h4>Chọn chức năng quản lý:</h4>
        <div class="list-group">
            <a href="@Url.Action("Index", "Users", new { area = "Admin" })" class="list-group-item list-group-item-action">
                <i class="bi bi-people"></i> Quản lý khách hàng
            </a>
            <a href="@Url.Action("Index", "Products", new { area = "Admin" })" class="list-group-item list-group-item-action">
                <i class="bi bi-box"></i> Quản lý hàng hóa
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}