@model ElectronicsStore.Models.ApplicationUser
@{
    ViewData["Title"] = "Chi tiết khách hàng";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h4>Thông tin khách hàng</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Họ và tên</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.FullName)</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>
        <dt class="col-sm-2">Số điện thoại</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>
        <dt class="col-sm-2">Vai trò</dt>
        <dd class="col-sm-10">@string.Join(", ", ViewBag.Roles)</dd>
    </dl>
</div>
<div>
    <a asp-action="Index" class="btn btn-primary">Quay lại</a>
</div>